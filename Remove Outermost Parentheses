class Solution {
    public String removeOuterParentheses(String s) {
        StringBuilder sb = new StringBuilder();
        char[] ch = s.toCharArray();
        int level = 0;
        for(char c : ch){
            if(c == '('){
                if(level > 0) sb.append(c);
                level++;
            }
            else if(c == ')'){
                level--;
                if(level>0) sb.append(c);
            }
        }
        return sb.toString();
    }
}
